<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<Import Project="..\Directory.Build.props" />

	<PropertyGroup>
		<SurrealDriverRestVersion>1.0.2</SurrealDriverRestVersion>
		<SurrealDriverRpcVersion>1.0.2</SurrealDriverRpcVersion>
		<SurrealAbstractionsVersion>1.0.2</SurrealAbstractionsVersion>
		<SurrealCommonVersion>1.0.2</SurrealCommonVersion>
		<SurrealConfigVersion>1.0.2</SurrealConfigVersion>
		<SurrealHostingExtensionsVersion>1.0.2</SurrealHostingExtensionsVersion>
		<SurrealJsonVersion>1.0.2</SurrealJsonVersion>
		<SurrealModelsVersion>1.0.2</SurrealModelsVersion>
		<SurrealWsVersion>1.0.2</SurrealWsVersion>
		<SurrealExtensionsServiceVersion>1.0.2</SurrealExtensionsServiceVersion>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup Condition="$(Configuration)=='Release'" Label="Nuget Pack Options">
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb;.xml</AllowedOutputExtensionsInPackageBuildOutputFolder>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<DebugType>embedded</DebugType>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup Condition="$(Configuration)=='Debug'">
		<DefineConstants>$(DefineConstants);SURREAL_NET_INTERNAL</DefineConstants>
	</PropertyGroup>
</Project>