<Project>
	<PropertyGroup>
		<SurrealDriverRestVersion>1.0.2</SurrealDriverRestVersion>
		<SurrealDriverRpcVersion>1.0.2</SurrealDriverRpcVersion>
		<SurrealAbstractionsVersion>1.0.2</SurrealAbstractionsVersion>
		<SurrealCommonVersion>1.0.2</SurrealCommonVersion>
		<SurrealConfigVersion>1.0.2</SurrealConfigVersion>
		<SurrealJsonVersion>1.0.2</SurrealJsonVersion>
		<SurrealModelsVersion>1.0.2</SurrealModelsVersion>
		<SurrealWsVersion>1.0.2</SurrealWsVersion>
	</PropertyGroup>
	
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup>
		<Authors>ProphetLamb</Authors>
		<Owners>ProhetLamb</Owners>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<Copyright>Copyright (c) ProphetLamb 2022</Copyright>
		<PackageProjectUrl>https://github.com/ProphetLamb/Surreal.Net</PackageProjectUrl>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/ProphetLamb/Surreal.Net.git</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>


	<PropertyGroup Condition="$(Configuration)=='Release'" Label="Nuget Pack Options">
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb;.xml</AllowedOutputExtensionsInPackageBuildOutputFolder>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<DebugType>embedded</DebugType>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup Condition="$(Configuration)=='Debug'">
		<DefineConstants>$(DefineConstants);SURREAL_NET_INTERNAL</DefineConstants>
	</PropertyGroup>
</Project>